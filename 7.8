int 
kthsmallest(int A[], int n, int k){
	int i, x, y, lowestval, discarded, maxval;
	x=0;
	maxval=lowestval=A[0];
	y=1;
	for(i=1;i<n;i++){
		if (A[i]==lowestval){
			y+=1;
		}
		else if (A[i]<lowestval){
			lowestval=A[i];
			y=1;
		}if (A[i]>maxval){
			maxval=A[i];
		}
	}x+=y;
	discarded=lowestval;
	while (x<k){
		lowestval=maxval;
		y=1;
		for(i=0;i<n;i++){
			if (A[i]==lowestval){
				y+=1;
			}else if ((A[i]<lowestval) && A[i]>discarded){
				lowestval=A[i];
				y=1;
			}
		}x+=y;
		discarded = lowestval;
	}return lowestval;
}
			
